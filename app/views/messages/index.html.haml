.chat-side
  = render "devise/shared/chat-side"
.chat-main
  .chat-main__header
    .chat-main__header__box
      .chat-main__header__box__gname
        グループ名
      .chat-main__header__box__list
        member_list
    .chat-main__header__btn
      .chat-main__header__btn__frame
        %a.chat-main__header__btn__frame__font{ href: "https://chat-space-sample.herokuapp.com"}
          edit
  .chat-main__messages
    = render partial: "messages", collection: @messages
  .chat-main__form
    = form_for [@group, @message] do |f|
      .chat-main__form__box
        = f.text_field :body, class: "chat-main__form__box__area", placeholder: 'type a message'
        = f.label :image, class: 'chat-main__form__box__image' do
          = fa_icon 'picture-o', class: 'chat-main__form__box__image__file'
          = f.file_field :image, class: 'chat-main__form__box__image__file'
      .chat-main__form__btn
        = f.submit 'Send', class: 'chat-main__form__btn--style'