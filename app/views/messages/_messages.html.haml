.chat-main__messages__content{"data-message-id": "#{message.id}"}
  .chat-main__messages__content__user
    .chat-main__messages__content__user--name
      = message.user.name
    .chat-main__messages__content__user--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages__content__text
    - if message.body.present?
      = message.body
  = image_tag message.image.url, class: 'chat-main__messages__content__text--image' if message.image.present?